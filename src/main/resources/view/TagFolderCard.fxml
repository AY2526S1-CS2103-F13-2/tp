    <padding>
        <Insets bottom="4" left="10" right="10" top="4" />
    </padding>

    <children>
        <Label fx:id="nameLabel" styleClass="tag-folder-name" text="friends" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="countBadge" styleClass="tag-folder-badge" text="0" />
    </children>
</HBox>
