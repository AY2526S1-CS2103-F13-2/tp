@startuml
!include style.puml
skinparam ArrowFontStyle plain

box ""Logic" LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager #3333C4
participant ":AddressBookParser" as AddressBookParser #3333C4
participant "lc:ListCommand" as ListCommand #3333C4
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model #E41F36
end box

[-> LogicManager : execute("list t/A t/friend")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("list t/A t/friend")
activate AddressBookParser

create ListCommand
AddressBookParser -> ListCommand : (predicate, tagNames=["A","friend"])
activate ListCommand

ListCommand --> AddressBookParser
deactivate ListCommand

AddressBookParser --> LogicManager : lc
deactivate AddressBookParser

LogicManager -> ListCommand : execute(model)
activate ListCommand

ListCommand -> Model : updateFilteredPersonList(predicate)
activate Model
Model --> ListCommand
deactivate Model

alt tagNames not empty
 ListCommand -> Model : addActiveTagFolders(["A","friend"])
else tagNames empty
 ListCommand -> ListCommand : (no sidebar update)
end

ListCommand --> LogicManager : CommandResult
deactivate ListCommand

[<-- LogicManager
deactivate LogicManager
@enduml
