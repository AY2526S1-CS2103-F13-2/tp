@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Square>>{

 Class "<<interface>>\nModel" as Model {
   +getPreviousCommand(): String
   +getNextCommand(): String
   +rememberExecutedCommand(cmd:String)
 }

 Class ModelManager {
   -history : CommandHistory
   +getPreviousCommand(): String
   +getNextCommand(): String
   +rememberExecutedCommand(cmd:String)
 }

 Class CommandHistory {
   -entries : List<String>
   -cursor  : int
   +add(cmd:String): void
   +previous(): String
   +next(): String
   +resetCursor(): void
   +isEmpty(): boolean
 }

 Class ReadOnlyUserPrefs #FFFFFF
 Class ReadOnlyAddressBook #FFFFFF
}

' ——— Relationships ———
ModelManager .up.|> Model
ModelManager *-- "1" CommandHistory : owns

Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook

' Notes
note right of CommandHistory
 Keeps a list of executed commands and a movable cursor.
 previous(): moves cursor up and returns older command.
 next(): moves cursor down and returns newer command (or empty).
end note

@enduml
